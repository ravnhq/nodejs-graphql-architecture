{
  "name": "nodejs-graphql-architecture",
  "version": "1.0.0",
  "description": "POC for nodejs with graphql for RAVN",
  "main": "index.js",
  "repository": "https://github.com/ravnhq/nodejs-graphql-architecture.git",
  "author": "eduardo de rivero <eduardomanrique@ravn.co>",
  "scripts": {
    "postinstall": "husky install",
    "start:dev": "dotenv -e .env nodemon src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "test": "npx dotenv -e .env.test -- jest --runInBand",
    "prisma:migrate:save": "yarn prisma migrate dev --preview-feature --create-only",
    "prisma:migrate:run": "yarn prisma migrate deploy --preview-feature",
    "prisma:migrate:run:test": "yarn dotenv -e .env.test -- yarn prisma migrate deploy --preview-feature",
    "prisma:migrate:reset": "yarn prisma migrate reset --preview-feature",
    "prisma:migrate:reset:test": "yarn dotenv -e .env.test -- yarn prisma migrate reset --preview-feature",
    "prisma:generate": "yarn prisma generate",
    "prisma:seed": "prisma db seed --preview-feature",
    "prisma:format": "yarn prisma format",
    "format": "prettier .",
    "format:write": "yarn format --write",
    "format:check": "yarn format --check",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "express-graphql": "^0.12.0",
    "graphql": "^16.2.0",
    "http-errors": "^2.0.0",
    "husky": "^7.0.4",
    "pino": "^7.6.1",
    "pino-pretty": "^7.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@ravn-dev/prettier-config": "^1.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-extended": "^1.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.controller.ts",
      "**/*.service.ts",
      "**/*.resolver.ts",
      "**/*.factory.ts",
      "**/utils/*.ts",
      "**/events/*.ts",
      "**/*.validator.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testTimeout": 15000
  }
}
